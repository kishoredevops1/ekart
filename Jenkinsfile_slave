pipeline {
    agent { node { label 'slave2' } } 
    triggers {
        cron('H/1 * * * 1-5')
    }
    tools {
        maven 'Maven3'
        jdk 'java8'
      
    }
    stages {
      stage('Checkout') {
                steps {
                                checkout scm                           
                }
                    }
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Build') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true install' 
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
            }  
        }
        
        stage ('Deploy'){
          steps{
            sh  'echo "deploying into qa server"'
            }
        }
        stage ('Unit-test') {
            steps {
                sh '''
                    echo "unit testing is done"
                    
                '''
            }
        }
    }
  
}
